<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_music"
            android:onClick="startMusicPlayer"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/button2"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/btnAbout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:onClick="startAbout"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:id="@+id/btnCamera"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:onClick="startCamera"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:id="@+id/btnWebsite"
            android:layout_below="@+id/btnCamera"
            android:layout_alignLeft="@+id/btnCamera"
            android:layout_alignRight="@+id/btnCamera"
            android:onClick="startWebsite"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:id="@+id/btnContacts"
            android:layout_below="@+id/btnWebsite"
            android:layout_alignLeft="@+id/btnWebsite"
            android:layout_alignRight="@+id/btnWebsite"
            android:onClick="startContacts"/>
</RelativeLayout>
